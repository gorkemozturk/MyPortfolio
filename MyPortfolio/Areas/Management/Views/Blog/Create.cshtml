@model MyPortfolio.Models.Post
@{
    ViewData["Title"] = "Create a Post";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">@ViewData["Title"]</h4>
            </div>
            <div class="content">
                <form class="post" asp-antiforgery="true">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Title"></label>
                                <input asp-for="Title" class="form-control border-input">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Body"></label>
                                <textarea asp-for="Body" rows="5" class="form-control border-input"></textarea>
                                <span asp-validation-for="Body" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="">
                        <a style="border-radius: 4px" asp-action="Index" class="btn btn-default btn-fill">
                            <span class="ti-angle-left"></span>
                        </a>
                        <button style="border-radius: 4px" type="submit" class="btn btn-info btn-fill btn-wd">
                            <span class="ti-save"></span>
                        </button>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>