@model MyPortfolio.Models.ApplicationUser
@{
    ViewData["Title"] = "Update the Existing User";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">@ViewData["Title"]</h4>
            </div>
            <div class="content">
                <form class="post" asp-antiforgery="true">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control border-input">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control border-input">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control border-input">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input asp-for="IsAuthorized">
                                <label asp-for="IsAuthorized"></label>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="">
                        <button asp-route-id="@Model.Id" type="submit" class="btn btn-info btn-fill btn-wd">Update</button>
                        <a asp-action="Index" class="btn btn-default btn-fill btn-wd">Back To List</a>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>