@model IEnumerable<MyPortfolio.Models.Work>
@{
    ViewData["Title"] = "Works";
}

<div class="row">
    <div class="col-md-12">
        <div class="text-right">
            <div class="text-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>
        <hr />
        <div class="card">
            <div class="header">
                <h4 class="title">@ViewData["Title"]</h4>
                <p class="category">Here are listing works.</p>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">@Html.DisplayNameFor(e => e.Id)</th>
                            <th>@Html.DisplayNameFor(e => e.Name)</th>
                            <th>@Html.DisplayNameFor(e => e.Language)</th>
                            <th class="text-center">@Html.DisplayNameFor(e => e.StartedAt)</th>
                            <th class="text-center">@Html.DisplayNameFor(e => e.FinishedAt)</th>
                            <th>@Html.DisplayNameFor(e => e.CreatedAt)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Language</td>
                                <td class="text-center">@item.StartedAt.Year</td>
                                <td class="text-center">
                                    @if (item.FinishedAt.HasValue == true)
                                    {
                                        @item.FinishedAt.Value.Year
                                    }
                                    else
                                    {
                                        @Html.Raw("Present")
                                    }
                                </td>
                                <td>@item.CreatedAt</td>
                                <td class="text-center">
                                    <partial name="_ActionButtonsPartial" model="item.Id" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





