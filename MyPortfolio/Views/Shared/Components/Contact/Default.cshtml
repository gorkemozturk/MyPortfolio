@model MyPortfolio.Models.Contact

<section class="colorlib-contact" data-section="contact">
    <div class="colorlib-narrow-content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-md-pull-3 animate-box" data-animate-effect="fadeInLeft">
                <span class="heading-meta">Get in Touch</span>
                <h2 class="colorlib-heading">Contact</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 animate-box" data-animate-effect="fadeInRight">
                <form asp-antiforgery="true" method="post" asp-action="Create" asp-controller="Contact">
                    <div class="form-group">
                        <input id="name" class="form-control" asp-for="Name" placeholder="Name" autocomplete="off">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <input id="email" class="form-control" asp-for="Email" placeholder="E-Mail" autocomplete="off">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <input id="subject" class="form-control" asp-for="Subject" placeholder="Subject" autocomplete="off">
                        <span class="text-danger" asp-validation-for="Subject"></span>
                    </div>
                    <div class="form-group">
                        <textarea id="body" class="form-control" cols="30" rows="10" placeholder="Message" asp-for="Body"></textarea>
                        <span class="text-danger" asp-validation-for="Body"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-send-message" value="Send Message">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>