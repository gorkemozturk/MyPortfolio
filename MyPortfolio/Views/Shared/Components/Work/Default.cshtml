@model IEnumerable<MyPortfolio.Models.Work>
@{
    int counter = 1;
}
<section class="colorlib-education" data-section="work">
    <div class="colorlib-narrow-content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-md-pull-3 animate-box" data-animate-effect="fadeInLeft">
                <span class="heading-meta">Works</span>
                <h2 class="colorlib-heading animate-box">Works</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 animate-box" data-animate-effect="fadeInLeft">
                <div class="fancy-collapse-panel">
                    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                        @foreach (var item in Model)
                        {
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="@Html.Raw("heading-work" + counter)">
                                    <h4 class="panel-title">
                                        <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="@Html.Raw("#collapse-work" + counter)" aria-expanded="true" aria-controls="@Html.Raw("collapse-work" + counter)">
                                            @item.Name (@item.Language)</a>
                                    </h4>
                                </div>
                                <div id="@Html.Raw("collapse-work" + counter)" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@Html.Raw("#heading-work" + counter)">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>@item.Name</strong> <br />
                                                @item.Language <br />
                                                <small>Started At: @item.StartedAt.Year - Finished At: @if (item.FinishedAt.HasValue == false) { @Html.Raw("Present") } else { @item.FinishedAt.Value.Year } </small>
                                                <hr />
                                                <p>@item.Body</p>
                                                <p><strong>Source</strong>: <a href="@item.Source">@item.Source</a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            counter++;
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>